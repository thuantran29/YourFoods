<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trannguyentanthuan2903.yourfoods.sign_up.view.SignupUserActivity">
    //Logo 4
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/blue_light"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:typeface="serif"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:text="Account"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    //Form 5
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="5"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:id="@+id/edtemail_signup"
            android:hint="Email"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:textSize="14sp"
            android:id="@+id/edtusername_signup"
            android:hint="UserName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:textSize="14sp"
            android:id="@+id/edtphonenumber_signup"
            android:hint="PhoneNumber"
            android:inputType="number"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:textSize="14sp"
            android:id="@+id/edtpassword_signup"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:textSize="14sp"
            android:id="@+id/edtconfirmpassword_signup"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    //Button 1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="16dp">

        <Button
            android:text="Sign Up"
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button" />
    </LinearLayout>

</LinearLayout>
