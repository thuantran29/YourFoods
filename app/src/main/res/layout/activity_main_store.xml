<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        //bar
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.AppBarLayout>
        </LinearLayout>
        //content_main
        <LinearLayout
            android:layout_weight="8.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include
                layout="@layout/content_main_store"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        //Navigation bottom
        <android.support.v7.widget.CardView
            app:cardElevation="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.aurelhubert.ahbottomnavigation.AHBottomNavigation>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_store"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" >
        <LinearLayout
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            // Avata 3
            <LinearLayout
                android:weightSum="5"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bg_slidingmenu"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></LinearLayout>
                <LinearLayout
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/linearLayout">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgPhotoStore_mainstore"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_avatar"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtstorename_mainuser"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:gravity="left|center_vertical"
                        android:text="Kun Park"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/txtSumShipped_mainstore"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:gravity="left|center_vertical"
                        android:text="0 Shipped"
                        android:textColor="@color/white"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>
            //main 4
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:id="@+id/navigation_home"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="18dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_home_black_24dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtReport"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textSize="18dp"
                            android:textColor="@color/grey"
                            android:text="Home"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/navigation_mycategory"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="18dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/category" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textSize="18dp"
                            android:textColor="@color/grey"
                            android:text="My Category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/navigation_createproduct"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:weightSum="5">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:padding="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/product" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.7">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Create Product"
                            android:textColor="@color/grey"
                            android:textSize="18dp"
                            android:typeface="serif" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/navigation_status"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_edittext"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="18dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switchCompat_Status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Status"
                            app:theme="@style/ColorSwitchStyle"
                            android:checked="true"
                            android:textColor="@color/grey"
                            android:textSize="18dp"
                            android:typeface="serif" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            //communicate 2
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:weightSum="2"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:id="@+id/navigation_aboutus_store"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="18dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textSize="18dp"
                            android:textColor="@color/grey"
                            android:text="About Us"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/navigation_maps"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:padding="18dp"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textSize="18dp"
                            android:textColor="@color/grey"
                            android:text="Maps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            //button 1
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn_logout_store"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:text="@string/log_out"
                    android:layout_marginBottom="25dp"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_white"
                    android:background="@drawable/custom_button_login"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
