<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trannguyentanthuan2903.yourfoods.product.view.CreateProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />


        //Spinner Category 1

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/test_spinner_border"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/txtCategory_editproduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Trà Sữa"
                android:textSize="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <Button
                    android:id="@+id/btnChooseimg_editproduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_textlabel"
                    android:gravity="center"
                    android:text="Chọn hình"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5">

                <ImageView
                    android:id="@+id/product_editproduct"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_avatar" />
            </FrameLayout>
        </LinearLayout>


        //1

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/bg_textlabel"
                android:gravity="center"
                android:text="Tên sản phẩm"
                android:textSize="15dp"
                android:typeface="serif" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <EditText
                android:id="@+id/edtProductName_editproduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:background="@drawable/bg_textview"
                android:gravity="center"
                android:hint="Product Name"
                android:textSize="16dp" />
        </LinearLayout>

        //3

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/bg_textlabel"
                android:gravity="center"
                android:text="Mô tả"
                android:textSize="15dp"
                android:typeface="serif" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <EditText
                android:id="@+id/edtDescribeProduct_editproduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@drawable/bg_textview"
                android:ems="10"
                android:gravity="center"
                android:hint="Describe Product"
                android:inputType="textMultiLine"
                android:textSize="15sp" />
        </LinearLayout>
        //1

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"

                android:background="@drawable/bg_textlabel"
                android:gravity="center"
                android:text="Giá"
                android:textSize="15dp"
                android:typeface="serif" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <EditText
                android:id="@+id/edtPrice_editproduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:background="@drawable/bg_textview"
                android:gravity="center"
                android:hint="15.000 vnd  (Nhập 15000)"
                android:inputType="number"
                android:textSize="16dp" />
        </LinearLayout>

        //1.5

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />
        //1

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnEditProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Chỉnh sửa"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDeleteProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/item_Active"
                android:gravity="center"
                android:text="Xóa"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

    </LinearLayout>


</LinearLayout>
