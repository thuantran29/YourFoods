<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="10dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grey_border_bottom"
        android:orientation="horizontal"
        android:padding="6dp"
        android:weightSum="10">

        <FrameLayout
            android:id="@+id/layoutAvataUser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8">

            <ImageView
                android:background="@drawable/border_image_view"
                android:id="@+id/imgAvataShop_itemOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_avatar" />

            <ImageView
                android:id="@+id/imgStatusShipShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imgshipped" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutInforShop_itemOrderHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.2"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/userNameShopOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Store Name : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtUserShopName_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Thuan Tran"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Phone Number : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtPhoneNumberShop_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0906252748"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/txtProductName_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Address : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtAddressShop_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Hóc Môn Tp. Hồ Chí Minh"
                    android:textColor="@color/grey"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Time Order : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtTimeOrderShop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="11h:20p:24s 12/2/2017"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>