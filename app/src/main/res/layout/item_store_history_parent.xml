<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <FrameLayout
            android:id="@+id/layoutAvataUser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8">

            <ImageView
                android:id="@+id/imgAvataUser_itemOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_avatar" />

            <ImageView
                android:id="@+id/imgStatusShip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imgshipped" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutInfor_itemOrderHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.2"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/userNameOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="User name : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtUserName_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Thuan Tran"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Phone Number : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtPhoneNumber_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0906252748"
                    android:textColor="@color/grey"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/txtProductName_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Địa chỉ : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtAddress_itemOrderList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Tân Hiệp - Hóc Môn - HCM"
                    android:textColor="@color/grey"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Time Order : "
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/txtTimeOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="22h:22p:24s 16/12/2017"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>